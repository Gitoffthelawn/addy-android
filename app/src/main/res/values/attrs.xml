<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SectionView">
        <attr name="sectionTitle" format="string" />
        <attr name="sectionDescription" format="string" />
        <attr name="sectionStartIcon" format="integer" />
        <attr name="sectionEndIcon" format="integer" />
        <attr name="sectionShowSwitch" format="boolean" />
        <attr name="sectionSwitchChecked" format="boolean" />
        <attr name="sectionRippleEffect" format="boolean" />
        <attr name="sectionEnabled" format="boolean" />
        <attr name="sectionColorAccent" format="color" />
        <attr name="sectionAlert" format="boolean" />
        <attr name="sectionOutlineWidth" format="integer" />
        <attr name="sectionElevation" format="float" />
        <attr name="sectionBackgroundColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="HomeStatCardView">
        <attr name="StatCardViewTitle" format="string" />
        <attr name="StatCardViewDescription" format="string" />
        <attr name="StatCardViewButtonText" format="string" />
        <attr name="StatCardViewShowButton" format="boolean" />
        <attr name="StatCardViewIcon" format="integer" />
        <attr name="StatCardViewElevation" format="float" />
    </declare-styleable>

    <declare-styleable name="AnimationView">
        <attr name="animationDrawable" format="integer" />
        <attr name="loopAnimation" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="AniBackColor" format="color" />
        <attr name="AniForeColor" format="color" />
    </declare-styleable>
</resources>