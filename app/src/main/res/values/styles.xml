<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:navigationBarColor">
            @color/NavbarLightDarkMode
        </item>
        <!-- Optional, if drawing behind the status bar too -->
        <item name="android:statusBarColor">
            @color/primaryColor
        </item>
        <item name="android:windowLightNavigationBar">true</item>


        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
        <item name="bottomSheetDialogTheme">@style/BottomSheet</item>

        <item name="android:windowSplashScreenBackground">@color/primaryColorStatic</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle.Expanded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle.Collapsed" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/NavbarLightDarkMode</item>
        <item name="android:navigationBarDividerColor">@color/NavbarLightDarkMode</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Setup" parent="AppTheme.NoActionBar">
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <!-- Optional, if drawing behind the status bar too -->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.NotYetWhite" parent="AppTheme.NoActionBar">
        <item name="android:navigationBarColor">
            @color/AnonAddyNotYetWhite
        </item>
    </style>

    <style name="AnonAddyProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>

    <style name="AnonAddyProgressBarRed" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable_red</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>

    <style name="AnonAddyProgressBarEasternBlue" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable_eastern_blue</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>

    <style name="RoundActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- SECONDARY -->
    <style name="CircularProgressButtonSecondary" parent="MaterialButtonSecondary">
        <item name="android:background">@drawable/circularprogressbutton_secondary</item>
        <item name="spinning_bar_color">@color/primaryLightColor</item>
        <item name="spinning_bar_padding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="initialCornerAngle">@dimen/corner_radius_button</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="MaterialButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTint">@android:color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>

    <style name="MaterialButtonSecondaryLight" parent="MaterialButtonSecondary">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="backgroundTint">@color/primarySuperSuperLightColor</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="iconTint">@color/primaryLightColor</item>

    </style>

    <style name="MaterialButtonSecondary.IconOnly" parent="MaterialButtonSecondaryLight">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="iconSize">18dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/primaryColor</item>
    </style>

    <style name="TextButtonsSecondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.00</item>
    </style>
    <!-- END SECONDARY -->

    <!-- TERTIARY -->
    <style name="CircularProgressButtonTertiary" parent="ActionButtonsTertiary">
        <item name="android:background">@drawable/circularprogressbutton_tertiary</item>
        <item name="spinning_bar_color">@color/black</item>
        <item name="spinning_bar_padding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="initialCornerAngle">@dimen/corner_radius_button</item>
    </style>

    <style name="ActionButtonsTertiary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="iconTint">@color/primaryLightColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
    </style>
    <!-- END TERTIARY -->

    <style name="DescTextStyle">
        <item name="android:alpha">0.7</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_corners_top</item>
    </style>

    <style name="SettingsSectionStyle">
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsSectionIconStyleMarginEnd">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SettingsSectionIconStyleMarginStart">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="titleTextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:alpha">0.6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RadioButton" parent="Theme.MaterialComponents.Light">
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:buttonTint">@color/primaryColor</item>
    </style>


    <!-- These switch styles come from my other Android project Cometin. You should check it out ;D -->
    <style name="overrideExpandableCardViewSwitch">
        <item name="android:background">@null</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:thumbTint">@color/primaryColor</item>
        <item name="android:thumb">@drawable/v3cometinswitchthumb</item>
        <item name="track">@drawable/v3cometinswitchtrackselector</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FloatingActionButton">
        <item name="drawableTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="AnonAddyTextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textColorHint">@color/titOutlineColor</item>
    </style>

    <style name="AnonAddyTextInputEditText">
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="placeholderTextColor">@color/titOutlineColor</item>
    </style>


    <!-- https://blog.usejournal.com/there-is-no-material-design-spinner-for-android-3261b7c77da8 -->


    <!-- Style for material design 'Spinner'-->
    <style name="AppTheme.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- color of box ONLY, not dropdown -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- the box outline color depending on state
             (default, enabled, hovered, focused, but NOT error) -->
        <item name="boxStrokeColor">@color/material_spinner_box</item>
        <!-- the box outline color just for errors -->
        <item name="boxStrokeErrorColor">@color/softRed</item>
        <!-- enable 8dp space below the box for error message -->
        <item name="errorEnabled">true</item>
        <!-- the hint INSIDE the box, before focusing the TextInputEditText -->
        <item name="android:textColorHint">@color/primaryColor</item>
        <!-- the hint ON TOP of the box, when the TextInputEditText is focused -->
        <item name="hintTextColor">@color/primaryColor</item>
        <!-- Gain access to additional styling for the child AutoCompleteTextView,
             which includes this spinner's dropdown/popup menu -->
        <item name="materialThemeOverlay">@style/AppTheme.ExposedDropdownMenu.MaterialThemeOverlay</item>
    </style>

    <!-- customization of the material theme for use as
         an overlay for the ExposedDropdownMenu style  -->
    <style name="AppTheme.ExposedDropdownMenu.MaterialThemeOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- background color of dropdown (popup) items -->
        <item name="colorSurface">@color/DropDownSurfaceLightDarkMode</item>
        <item name="android:popupElevation">4dp</item>
        <!--
         When this overlay is applied, the AutoCompleteTextView
         loses padding. Luckily, can restore it by defining
         a style that should be applied to all AutoCompletTextView(s)
         in this theme/overlay
         -->
        <item name="autoCompleteTextViewStyle">@style/AppTheme.ExposedDropdownMenu.AutoCompleteStyle</item>
    </style>

    <!-- style the AutoCompleteTextView of our material spinner -->
    <style name="AppTheme.ExposedDropdownMenu.AutoCompleteStyle">
        <!-- restore padding to sanity -->
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- style for material spinner 'item' layout -->
    <style name="MaterialSpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/DropDownSurfaceLightDarkMode</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AnonAddyDialogTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AnonAddyDialogDesc" parent="AnonAddyDialogTitle">
        <item name="android:alpha">0.7</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AnonAddyMaterialButtonToggleGroupButtonOverlay">
        <item name="colorSurface">?attr/selectableItemBackground</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.2</item>
        <item name="android:background">@color/IconGrayTint</item>
    </style>


    <style name="AnonAddyCustomCardViewStyleTop" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_top</item>
        <item name="android:stateListAnimator">@animator/selector_raise</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius_cardview</item>
    </style>

    <style name="AnonAddyCustomCardViewStyleCenter" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_center</item>
        <item name="android:stateListAnimator">@animator/selector_raise</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_center" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeBottomRight">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius_cardview</item>
    </style>

    <style name="AnonAddyCustomCardViewStyleBottom" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_bottom</item>
        <item name="android:stateListAnimator">@animator/selector_raise</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_bottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_cardview</item>
        <item name="cornerSizeBottomRight">14dp</item>
        <item name="cornerSizeBottomLeft">14dp</item>
    </style>

    <style name="AnonAddyTitleAction" parent="titleTextView">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AnonAddyDescText">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="AnonAddyToggleButton" parent="MaterialButtonSecondary">
        <item name="android:backgroundTint">@color/anonaddy_toggle_button_color</item>
        <item name="cornerRadius">@dimen/corner_radius_cardview</item>
    </style>

    <style name="RoundFlatButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="android:textColor">@color/IconGrayTint</item>
    </style>

    <style name="AnonAddyChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">@dimen/corner_radius_chips</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/shimmerGray</item>
    </style>

</resources>