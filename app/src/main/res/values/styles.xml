<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:navigationBarColor">
            @color/NavbarLightDarkMode
        </item>
        <!-- Optional, if drawing behind the status bar too -->
        <item name="android:statusBarColor">
            @color/primaryColor
        </item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
        <item name="bottomSheetDialogTheme">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/NavbarLightDarkMode</item>
        <item name="android:navigationBarDividerColor">@color/NavbarLightDarkMode</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AnonAddyProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>

    <style name="AppTheme.Setup" parent="AppTheme.NoActionBar">
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <!-- Optional, if drawing behind the status bar too -->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <!-- Optional, if drawing behind the status bar too -->
    </style>

    <style name="AnonAddyProgressBarRed" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable_red</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>

    <style name="AnonAddyProgressBarEasternBlue" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_drawable_eastern_blue</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:minHeight">8dip</item>
    </style>


    <style name="MaterialTextButtonWithoutSpacing" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="ActionButtonsSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="TextButtonsSecondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.00</item>
    </style>


    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rounded_corners_top</item>
    </style>

    <style name="SettingsSectionStyle">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsSectionStyle.NoAction" parent="SettingsSectionStyle">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SettingsSectionIconStyleEnd">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SettingsSectionIconStyleStart">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="titleTextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <!-- These switch styles come from my other Android project Cometin. You should check it out ;D -->
    <style name="overrideExpandableCardViewSwitch">
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:thumbTint">@color/primaryColor</item>
        <item name="android:thumb">@drawable/v3cometinswitchthumb</item>
        <item name="track">@drawable/v3cometinswitchtrackselector</item>
    </style>

    <style name="FloatingActionButton">
        <item name="drawableTint">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="AnonAddyTextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textColorHint">@color/titOutlineColor</item>
    </style>

    <style name="AnonAddyTextInputEditText">
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="placeholderTextColor">@color/titOutlineColor</item>
    </style>


    <!-- https://blog.usejournal.com/there-is-no-material-design-spinner-for-android-3261b7c77da8 -->


    <!-- Style for material design 'Spinner'-->
    <style name="AppTheme.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- color of box ONLY, not dropdown -->
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <!-- the box outline color depending on state
             (default, enabled, hovered, focused, but NOT error) -->
        <item name="boxStrokeColor">@color/material_spinner_box</item>
        <!-- the box outline color just for errors -->
        <item name="boxStrokeErrorColor">@color/softRed</item>
        <!-- enable 8dp space below the box for error message -->
        <item name="errorEnabled">true</item>
        <!-- the hint INSIDE the box, before focusing the TextInputEditText -->
        <item name="android:textColorHint">@color/primaryColor</item>
        <!-- the hint ON TOP of the box, when the TextInputEditText is focused -->
        <item name="hintTextColor">@color/primaryColor</item>
        <!-- Gain access to additional styling for the child AutoCompleteTextView,
             which includes this spinner's dropdown/popup menu -->
        <item name="materialThemeOverlay">@style/AppTheme.ExposedDropdownMenu.MaterialThemeOverlay</item>
    </style>

    <!-- customization of the material theme for use as
         an overlay for the ExposedDropdownMenu style  -->
    <style name="AppTheme.ExposedDropdownMenu.MaterialThemeOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- background color of dropdown (popup) items -->
        <item name="colorSurface">@color/DropDownSurfaceLightDarkMode</item>
        <item name="android:popupElevation">4dp</item>
        <!--
         When this overlay is applied, the AutoCompleteTextView
         loses padding. Luckily, we can restore it by defining
         a style that should be applied to all AutoCompletTextView(s)
         in this theme/overlay
         -->
        <item name="autoCompleteTextViewStyle">@style/AppTheme.ExposedDropdownMenu.AutoCompleteStyle</item>
    </style>

    <!-- style the AutoCompleteTextView of our material spinner -->
    <style name="AppTheme.ExposedDropdownMenu.AutoCompleteStyle">
        <!-- restore padding to sanity -->
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!-- style for material spinner 'item' layout -->
    <style name="MaterialSpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:color">@color/DropDownSurfaceLightDarkMode</item>
        <item name="android:textColor">@color/BlackWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>