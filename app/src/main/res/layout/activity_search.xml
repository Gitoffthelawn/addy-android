<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_CL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AnonAddyNotYetWhite"
    android:orientation="vertical">


    <include
        android:id="@+id/activity_search_toolbar"
        layout="@layout/custom_toolbar_one_handed" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_search_NCV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/activity_search_RL_lottieview"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/not_found" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingStart="16dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingEnd="16dp">

                <LinearLayout
                    android:id="@+id/activity_search_aliases_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnonAddyTitleAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/aliases" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/activity_search_aliases_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_child_count="5"
                        app:shimmer_demo_grid_child_count="1"
                        app:shimmer_demo_layout="@layout/aliases_recyclerview_list_item_shimmer"
                        app:shimmer_demo_layout_manager_type="linear_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_search_recipients_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnonAddyTitleAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/recipients" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/activity_search_recipients_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_child_count="5"
                        app:shimmer_demo_grid_child_count="1"
                        app:shimmer_demo_layout="@layout/recipients_recyclerview_list_item_recipients_shimmer"
                        app:shimmer_demo_layout_manager_type="linear_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_search_domains_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnonAddyTitleAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/domains" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/activity_search_domains_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_child_count="5"
                        app:shimmer_demo_grid_child_count="1"
                        app:shimmer_demo_layout="@layout/domains_recyclerview_list_item_domains_shimmer"
                        app:shimmer_demo_layout_manager_type="linear_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_search_usernames_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnonAddyTitleAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/usernames" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/activity_search_usernames_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_child_count="5"
                        app:shimmer_demo_grid_child_count="1"
                        app:shimmer_demo_layout="@layout/usernames_recyclerview_list_item_usernames_shimmer"
                        app:shimmer_demo_layout_manager_type="linear_vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_search_rules_LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="gone">

                    <TextView
                        style="@style/AnonAddyTitleAction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/rules" />

                    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
                        android:id="@+id/activity_search_rules_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:shimmer_demo_angle="20"
                        app:shimmer_demo_child_count="5"
                        app:shimmer_demo_grid_child_count="1"
                        app:shimmer_demo_layout="@layout/rules_recyclerview_list_item_rules_shimmer"
                        app:shimmer_demo_layout_manager_type="linear_vertical" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>