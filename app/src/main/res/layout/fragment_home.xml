<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_statistics_NSV"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_top"
        android:paddingStart="@dimen/layout_padding"
        android:paddingEnd="@dimen/layout_padding">

        <LinearLayout
            android:id="@+id/home_statistics_LL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                style="@style/AddyIoTitleNoAction"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/general" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingStart="@dimen/cardview_extra_padding"
                android:paddingEnd="@dimen/cardview_extra_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TODO INFORMATION" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_statistics_LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/AddyIoTitleAction"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/titleTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/stats" />

                </LinearLayout>

                <com.patrykandpatrick.vico.views.chart.ChartView
                    android:id="@+id/home_chart_view_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:axisStyle="@style/AddyIoAxisStyle"
                    app:chart="line"
                    app:chartZoomEnabled="false"
                    app:horizontalLayout="fullWidth"
                    app:lineChartStyle="@style/AddyIoLineChart"
                    app:showBottomAxis="true"
                    app:showStartAxis="true" />


                <TextView
                    android:id="@+id/home_no_aliases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/no_result_textview_padding"
                    android:text="@string/no_active_aliases"
                    android:textAlignment="center"
                    android:textColor="@color/BlackWhite"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>