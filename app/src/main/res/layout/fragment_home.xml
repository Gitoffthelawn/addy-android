<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_statistics_RL1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1">

        <com.patrykandpatrick.vico.views.chart.ChartView
            android:id="@+id/home_chart_view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:alpha="0.1"
            app:chart="line"
            app:fadingEdgeVisibilityInterpolator="androidx.interpolator.view.animation.FastOutSlowInInterpolator"
            app:fadingEdgeWidth="32dp"
            app:horizontalLayout="fullWidth"
            app:lineChartStyle="@style/Chart3LineChartStyle"
            app:showBottomAxis="false"
            app:showStartAxis="false" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_statistics_NSV"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/layout_padding_top"
            android:paddingStart="@dimen/layout_padding"
            android:paddingEnd="@dimen/layout_padding">

            <LinearLayout
                android:id="@+id/home_statistics_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/AddyIoTitleNoAction"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/titleTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/general" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/cardview_extra_padding"
                    android:paddingEnd="@dimen/cardview_extra_padding">

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_shared_domain_aliases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_email_at"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/shared_domain_aliases" />

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_recipients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_inbox"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/recipients" />

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_usernames"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_users"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/usernames" />

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_domains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_world"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/domains" />

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_filter"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/rules" />

                    <host.stjin.anonaddy.ui.customviews.DashboardStatCardView
                        android:id="@+id/home_stat_card_bandwidth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:StatCardViewDescription="0/1"
                        app:StatCardViewIcon="@drawable/ic_gauge"
                        app:StatCardViewShowButton="false"
                        app:StatCardViewTitle="@string/monthly_bandwidth" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/home_statistics_LL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/AddyIoTitleAction"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/titleTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/stats" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_no_aliases"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/no_result_textview_padding"
                        android:text="@string/no_active_aliases"
                        android:textAlignment="center"
                        android:textColor="@color/BlackWhite"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
