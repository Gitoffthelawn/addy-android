<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.setup.SetupHow2Fragment">


    <ImageView
        android:id="@+id/setup_how_2_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="196dp"
        android:baselineAlignBottom="false"
        android:padding="96dp"
        android:src="@drawable/setup_2"
        tools:ignore="ContentDescription" />


    <ScrollView
        android:id="@+id/setup_how_2_SV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/setup_how_2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_rounded_corners_top"
            android:minHeight="530dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/layout_padding"
            android:paddingEnd="@dimen/layout_padding">

            <ImageView
                android:id="@+id/setup_how_2_iv"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                app:tint="@color/BlackWhite" />

            <TextView
                style="@style/AnonAddySetupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_does_it_work" />

            <TextView
                style="@style/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup_how2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/setup_how2_desc"
                android:textColor="@color/BlackWhite"
                android:textSize="18sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/setup_how_2_button_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setup_how_2_button_next"
                    style="@style/MaterialButtonSecondaryLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>