<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_profile_select_dialog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:transitionName="background_transition"
        app:cardCornerRadius="@dimen/corner_radius"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_profile_select_dialog_card_accountname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="$ANONADDY_Account_Name"
                        android:textAllCaps="false"
                        android:textColor="@color/BlackWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/main_profile_select_dialog_card_subscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="$ANONADDY_User_Subscription"
                        android:textSize="16sp" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/main_profile_select_dialog_user_initials"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:transitionName="image_transition" />

            </LinearLayout>


            <TextView
                android:id="@+id/main_profile_select_dialog_anonaddy_settings"
                style="@style/SettingsSectionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_logo_small"
                android:drawablePadding="16dp"
                android:drawableTint="@color/IconGrayTint"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/anonaddy_settings"
                android:textColor="@color/BlackWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/main_profile_select_dialog_domain_settings"
                style="@style/SettingsSectionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_round_dns_24"
                android:drawablePadding="16dp"
                android:drawableTint="@color/IconGrayTint"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/domain_settings"
                android:textColor="@color/BlackWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/main_profile_select_dialog_username_settings"
                style="@style/SettingsSectionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableStart="@drawable/ic_username_settings"
                android:drawablePadding="16dp"
                android:drawableTint="@color/IconGrayTint"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/username_settings"
                android:textColor="@color/BlackWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/main_profile_select_dialog_app_settings"
                style="@style/SettingsSectionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_round_settings_24"
                android:drawablePadding="16dp"
                android:drawableTint="@color/IconGrayTint"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/app_settings"
                android:textColor="@color/BlackWhite"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:text="AnonAddy Android | Stjin"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>