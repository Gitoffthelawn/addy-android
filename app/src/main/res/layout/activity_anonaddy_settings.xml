<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_settings_CL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AnonAddyNotYetWhite"
    android:orientation="vertical">


    <include
        android:id="@+id/anonaddysettings_toolbar"
        layout="@layout/custom_toolbar_one_handed" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AnonAddyTitleAction"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/usage" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/anonaddy_settings_monthly_bandwidth_cv"
                style="@style/AnonAddyCustomCardViewStyleTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:id="@+id/anonaddy_settings_statistics_monthly_bandwidth_LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_vertical"
                            android:text="@string/monthly_bandwidth"
                            app:drawableStartCompat="@drawable/ic_speedometer_slow"
                            app:drawableTint="@color/primaryColor" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_monthly_bandwidth_current"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_monthly_bandwidth_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:alpha="0.5"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/anonaddy_settings_statistics_monthly_bandwidth_desc"
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:text="@string/anonaddy_settings_monthly_bandwidth_desc" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/anonaddy_settings_statistics_monthly_bandwidth_progress"
                        style="@style/AnonAddyProgressBar.Vertical"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:progress="60" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/anonaddy_settings_statistics_recipients_cv"
                style="@style/AnonAddyCustomCardViewStyleCenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:id="@+id/anonaddy_settings_statistics_recipients_LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_vertical"
                            android:text="@string/recipients"
                            app:drawableStartCompat="@drawable/ic_recipients"
                            app:drawableTint="@color/softRed" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_recipients_current"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_recipients_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:alpha="0.5"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/anonaddy_settings_statistics_recipients_desc"
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:text="@string/anonaddy_settings_statistics_recipients_desc" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/anonaddy_settings_statistics_statistics_recipients_progress"
                        style="@style/AnonAddyProgressBarRed.Vertical"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:progress="60" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/anonaddy_settings_statistics_aliases_cv"
                style="@style/AnonAddyCustomCardViewStyleBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:id="@+id/anonaddy_settings_statistics_aliases_LL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_vertical"
                            android:text="@string/shared_domain_aliases"
                            app:drawableStartCompat="@drawable/ic_round_alternate_email_24"
                            app:drawableTint="@color/easternBlue" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_aliases_current"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/anonaddy_settings_statistics_aliases_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="4dp"
                                android:alpha="0.5"
                                android:text="\?"
                                android:textColor="@color/BlackWhite"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/anonaddy_settings_statistics_aliases_desc"
                            style="@style/DescTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif"
                            android:text="@string/anonaddy_settings_statistics_aliases_desc" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/anonaddy_settings_statistics_aliases_progress"
                        style="@style/AnonAddyProgressBarEasternBlue.Vertical"
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:progress="60" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AnonAddyTitleAction"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/settings" />

            </LinearLayout>


            <host.stjin.anonaddy.ui.customviews.SectionView
                android:id="@+id/anonaddy_settings_update_default_recipient_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sectionDescription="@string/update_default_recipient_desc"
                app:sectionEndIcon="@drawable/ic_outline_edit_24"
                app:sectionStartIcon="@drawable/ic_creation"
                app:sectionTitle="@string/update_default_recipient" />

            <host.stjin.anonaddy.ui.customviews.SectionView
                android:id="@+id/anonaddy_settings_update_default_alias_domain_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sectionDescription="@string/update_default_alias_domain_desc"
                app:sectionEndIcon="@drawable/ic_outline_edit_24"
                app:sectionStartIcon="@drawable/ic_creation"
                app:sectionTitle="@string/update_default_alias_domain" />

            <host.stjin.anonaddy.ui.customviews.SectionView
                android:id="@+id/anonaddy_settings_update_default_alias_format_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sectionDescription="@string/update_default_alias_format_desc"
                app:sectionEndIcon="@drawable/ic_outline_edit_24"
                app:sectionStartIcon="@drawable/ic_creation"
                app:sectionTitle="@string/update_default_alias_format" />

            <host.stjin.anonaddy.ui.customviews.SectionView
                android:id="@+id/anonaddy_settings_use_reply_to_header_for_replying_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sectionDescription="@string/use_reply_to_header_for_replying_desc"
                app:sectionEndIcon="@drawable/ic_outline_edit_24"
                app:sectionStartIcon="@drawable/ic_creation"
                app:sectionTitle="@string/use_reply_to_header_for_replying" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>