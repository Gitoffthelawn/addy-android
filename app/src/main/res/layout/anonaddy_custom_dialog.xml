<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape_rounded_corners"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_dialog">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/BlackWhite"
        android:textSize="18sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/dialog_text"
        style="@style/DescTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textSize="14sp"
        tools:text="lorem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_negative_button"
            style="@style/MaterialButtonSecondaryDark"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="4dp"
            android:text="@string/no_wait" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/dialog_positive_button"
            style="@style/CircularProgressButtonSecondary"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/confirm" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/softRed"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>