<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners
                android:bottomLeftRadius="14dp"
                android:bottomRightRadius="14dp"
                android:topLeftRadius="@dimen/corner_radius_cardview"
                android:topRightRadius="@dimen/corner_radius_cardview" />
            <solid android:color="@color/easternBlueSuperLight" />
        </shape>
    </item>

    <item
        android:id="@android:id/progress">

        <scale android:scaleWidth="100%">
            <shape>
                <corners
                    android:bottomLeftRadius="14dp"
                    android:bottomRightRadius="14dp"
                    android:topLeftRadius="@dimen/corner_radius_cardview"
                    android:topRightRadius="@dimen/corner_radius_cardview" />
                <solid android:color="@color/easternBlue" />
            </shape>
        </scale>
    </item>
</layer-list>