<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/primaryColor"
    android:elevation="4dp"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/main_top_bar_not_icon_RL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/main_top_bar_user_initials"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/main_top_bar_not_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/title_notifications"
            android:src="@drawable/ic_round_notifications_none_24"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/main_top_bar_not_new_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/title_notifications"
            android:visibility="gone"
            app:srcCompat="@drawable/circle"
            app:tint="@color/newNotificationColor" />
    </RelativeLayout>


    <TextView
        android:id="@+id/main_top_bar_not_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="demo.anonaddy.com"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_top_bar_not_icon_RL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/main_top_bar_user_initials"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_account_circle_outline"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>